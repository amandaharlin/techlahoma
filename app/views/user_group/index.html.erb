
<h1>User Groups</h1>


<% @groups.each do |u| %>
<div class="row">
  <div class="col-lg-4">
    <a href="<%= u[:website] %>"><img src="<%= u[:logo_url] %>" height="75" width="75"></a>
    <%= u[:blurb] %>
  </div>
  <div class="col-lg-8">
      Meets at: <%= u[:location] %> on the: <%= u[:meetupdate]%> |
      email: <%= u[:email] %> |
      <a href="<%= u[:website] %>">website</a> |
      <% if u[:twitter] %>
          <a href="https://twitter.com/<%= u[:twitter] %>">twitter</a> |
      <% end %>
  </div>
</div>
<br/>
<% end%>
